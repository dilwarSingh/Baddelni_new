                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="24dp"
                        android:elevation="0dp"
                        app:cardBackgroundColor="@color/greyTextBg"
